{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://chatkeep.com/schemas/artifact-schema.json",
  "title": "Artifact",
  "type": "object",
  "required": [
    "type",
    "title",
    "content"
  ],
  "properties": {
    "type": {
      "type": "string",
      "minLength": 1
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "language": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "iterations": {
      "type": "string"
    },
    "evolutionNotes": {
      "type": "string"
    },
    "content": {
      "type": "string",
      "minLength": 1
    }
  }
}